<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

        <entity class="Models.Customer">
                <table name="customer" schema="" catalog="my_scheme"/>
                <attributes>
                        <id name="customerId">
                                <column name="CustomerID"/>
                        </id>
                        <basic name="name">
                                <column name="Name"/>
                        </basic>
                        <basic name="age">
                                <column name="Age"/>
                        </basic>
                </attributes>
        </entity>
</entity-mappings>
