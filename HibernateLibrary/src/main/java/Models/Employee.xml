<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

        <entity class="Models.Employee">
                <table name="employee" schema="" catalog="my_scheme"/>
                <attributes>
                        <id name="id">
                                <column name="ID"/>
                        </id>
                        <basic name="name">
                                <column name="Name"/>
                        </basic>
                        <basic name="age">
                                <column name="Age"/>
                        </basic>
                        <basic name="salary">
                                <column name="Salary"/>
                        </basic>
                </attributes>
        </entity>
</entity-mappings>
